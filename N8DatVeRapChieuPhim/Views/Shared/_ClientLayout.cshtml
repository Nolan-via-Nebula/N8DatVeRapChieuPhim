<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Website đặt vé rạp chiếu phim – Tra cứu phim, lịch chiếu, đặt vé online" />

    <title>@ViewData["Title"] - N8 Cinema</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Client CSS -->
    <link rel="stylesheet" href="~/css/client.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fas fa-film text-warning me-2"></i> N8 Cinema
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#clientNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="clientNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Phims" ? "active" : "")"
                           asp-controller="Phims" asp-action="Index">
                            <i class="fas fa-video"></i> Phim đang chiếu
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home" asp-action="LichChieu">
                            <i class="fas fa-calendar-alt"></i> Lịch chiếu
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home" asp-action="HuongDanDatVe">
                            <i class="fas fa-ticket-alt"></i> Đặt vé
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home" asp-action="LienHe">
                            <i class="fas fa-envelope"></i> Liên hệ
                        </a>
                    </li>

                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-outline-warning"
                           asp-controller="Admin" asp-action="Dashboard">
                            <i class="fas fa-user-shield"></i> Admin
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-4">

        <!-- Breadcrumb -->
        @if (ViewData["Title"] != null && ViewData["Title"]?.ToString() != "Trang chủ")
        {
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @ViewData["Title"]
                    </li>
                </ol>
            </nav>
        }

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5><i class="fas fa-film"></i> N8 Cinema</h5>
                    <p class="small mb-0">
                        Hệ thống đặt vé rạp chiếu phim trực tuyến
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Liên hệ</h6>
                    <p class="small mb-0">
                        <i class="fas fa-map-marker-alt"></i> Hà Nội<br />
                        <i class="fas fa-phone"></i> 0123 456 789<br />
                        <i class="fas fa-envelope"></i> support@n8cinema.vn
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Kết nối</h6>
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-youtube fa-lg"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-tiktok fa-lg"></i></a>
                </div>
            </div>
            <hr />
            <p class="text-center small mb-0">
                &copy; 2026 N8 Cinema. All rights reserved.
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/client.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
