@model List<N8DatVeRapChieuPhim.Models.Phim>

@{
    ViewData["Title"] = "Danh sách phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <p>Tổng số phim: <strong>@Model.Count</strong></p>

    <a asp-action="Create" class="btn btn-primary btn-action">
        <i class="bi bi-plus-circle"></i>
        <span class="ms-2">Thêm phim</span>
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Mã phim</th>
            <th>Tên phim</th>
            <th>Thể loại</th>
            <th>Thời lượng (phút)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phim in Model)
        {
            <tr>
                <td>@phim.Id</td>
                <td>@phim.MaPhim</td>
                <td>@phim.TenPhim</td>
                <td>@phim.TheLoai</td>
                <td>@phim.ThoiLuong</td>
                <td>
                    <a asp-action="Details" asp-route-id="@phim.Id"
                       class="btn btn-sm btn-primary">
                        Chi tiết
                    </a>

                    <a asp-action="Edit" asp-route-id="@phim.Id"
                       class="btn btn-sm btn-warning">
                        Chỉnh sửa
                    </a>

                    <a asp-action="Delete" asp-route-id="@phim.Id"
                       class="btn btn-sm btn-danger">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
