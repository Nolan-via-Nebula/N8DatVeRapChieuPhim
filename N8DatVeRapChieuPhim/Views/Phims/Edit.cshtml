@model N8DatVeRapChieuPhim.Models.Phim

@{
    ViewData["Title"] = "Chỉnh sửa thông tin phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-clipboard-data"></i> Thông tin phim
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    @* BẮT BUỘC: hidden Id *@
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger"
                         role="alert"></div>

                    <div class="row g-3">

                        <div class="col-md-12">
                            <label asp-for="MaPhim" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.MaPhim)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="MaPhim"
                                   class="form-control"
                                   placeholder="Nhập mã phim" />
                            <span asp-validation-for="MaPhim"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="TenPhim" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.TenPhim)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TenPhim"
                                   class="form-control"
                                   placeholder="Nhập tên phim" />
                            <span asp-validation-for="TenPhim"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="TheLoai" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.TheLoai)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TheLoai"
                                   class="form-control"
                                   placeholder="Nhập thể loại phim" />
                            <span asp-validation-for="TheLoai"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="ThoiLuong" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.ThoiLuong)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ThoiLuong"
                                   type="number"
                                   class="form-control"
                                   placeholder="Nhập thời lượng (phút)" />
                            <span asp-validation-for="ThoiLuong"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="DaoDien" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.DaoDien)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DaoDien"
                                   class="form-control"
                                   placeholder="Nhập tên đạo diễn" />
                            <span asp-validation-for="DaoDien"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="MoTa" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.MoTa)
                                <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="MoTa"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Nhập mô tả phim"></textarea>
                            <span asp-validation-for="MoTa"
                                  class="text-danger small"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="HinhAnh" class="form-label fw-bold">
                                @Html.DisplayNameFor(model => model.HinhAnh)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="HinhAnh"
                                   class="form-control"
                                   placeholder="Nhập đường dẫn hình ảnh" />
                            <span asp-validation-for="HinhAnh"
                                  class="text-danger small"></span>
                        </div>

                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-between flex-wrap">
                        <a asp-action="Index"
                           class="btn btn-outline-secondary btn-md px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>

                        <button type="submit"
                                class="btn btn-primary btn-md px-4">
                            <i class="bi bi-save"></i> Lưu phim
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
