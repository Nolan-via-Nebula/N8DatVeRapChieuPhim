@model N8DatVeRapChieuPhim.Models.Phim

@{
    ViewData["Title"] = "Chi tiết thông tin phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3">
    <div class="card-header bg-primary text-white">
        <h4>Thông tin phim</h4>
    </div>

    <div class="card-body">

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Id:</strong>
            </div>
            <div class="col-md-9">
                @Model.Id
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Mã phim:</strong>
            </div>
            <div class="col-md-9">
                @Model.MaPhim
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Tên phim:</strong>
            </div>
            <div class="col-md-9">
                @Model.TenPhim
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Thể loại:</strong>
            </div>
            <div class="col-md-9">
                @Model.TheLoai
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Thời lượng (phút):</strong>
            </div>
            <div class="col-md-9">
                @Model.ThoiLuong
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Đạo diễn:</strong>
            </div>
            <div class="col-md-9">
                @Model.DaoDien
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Mô tả:</strong>
            </div>
            <div class="col-md-9">
                @Model.MoTa
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <strong>Hình ảnh:</strong>
            </div>
            <div class="col-md-9">
                <img src="@Model.HinhAnh"
                     alt="@Model.TenPhim"
                     class="img-fluid rounded"
                     style="max-height:200px;" />
            </div>
        </div>

    </div>
</div>

<div class="card-footer">
    <a asp-controller="Phims"
       asp-action="Index"
       class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
